<div class="col-lg-4 mx-auto">
    <div class="card">
        <div class="card-body">
            <form action="/books/add" method="POST">
                <div class="form-group">
                    <input type="text" name="title" class="form-control" placeholder="titulo libro" autofocus required>
                </div>
                <div class="form-group">
                    <input type="text" name="author" class="form-control" placeholder="Autor" required>
                </div>
                <div class="form-group">
                    <input type="text" placeholder="isbn" name="isbn" class="form-control" pattern="(?:(?=.{17}$)97[89][ -](?:[0-9]+[ -]){2}[0-9]+[ -][0-9]|97[89][0-9]{10}|(?=.{13}$)(?:[0-9]+[ -]){2}[0-9]+[ -][0-9Xx]|[0-9]{9}[0-9Xx])" required>
                </div>
                <button class="btn btn-primary btn-block" type="submit">
                    Guardar
                </button>
            </form>
        </div>
    </div>
</div>